<h1 style="color: #2c3e50; font-family: Arial, sans-serif; margin-bottom: 20px;">{{title}}</h1>

{{#if name}}
    <h2 style="color: #2980b9; font-family: Arial, sans-serif; margin: 15px 0;">Welcome {{name}}!</h2>
    {{#if isMsr}}
        <img src="/images/admin-icon.png" alt="MSR Picture" style="max-width: 100px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); margin-bottom: 25px;">
        <p style="font-family: Arial, sans-serif; color: #34495e; margin: 0 0 25px 0;">You are an MSR user with special privileges.</p>
    {{else if isMember}}
        <img src="/images/user-icon.png" alt="Member Picture" style="max-width: 100px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); margin-bottom: 25px;">
        <p style="font-family: Arial, sans-serif; color: #34495e; margin: 0 0 25px 0;">You are a member.</p>
    {{else if isMsr2}}
        <img src="/images/admin-icon.png" alt="MSR Picture" style="max-width: 100px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); margin-bottom: 25px;">
        <p style="font-family: Arial, sans-serif; color: #34495e; margin: 0 0 25px 0;">You are an MSR user with special privileges.</p>
    {{else}}
               <p style="font-family: Arial, sans-serif; color: #34495e; margin: 0 0 25px 0;">You are an authenticated user without a specific role.</p>
    {{/if}}
{{/if}}

{{#if isAuthenticated }}

<a href="/users/id">View ID token claims</a>
<br>
<a href="/auth/signout">Sign out</a>
{{else}}
<p>Welcome to {{title}}</p>
<a href="/auth/signin">Sign in</a>
{{/if}}
